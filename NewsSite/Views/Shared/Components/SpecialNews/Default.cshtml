@using DomainModel.ViewModels.News
@model List<NewsListItem>

<div id="newsCarousel" class="carousel slide mt-3" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var newsItem = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : "")">
 
                    <div class="img-relative img-hover">
                        <a href="show-news.html" class="img-top-news-1">
                  
                            <img  src="@Url.Content(newsItem.ImageUrl)" class="img-fluid" alt="@newsItem.NewsTitle">

                            <div class="text-box-top-news-1">
                                <div class="circle-title"></div>
                                <p class="font_15 p-0 style-top-tittle line-height-text">
                                    @Html.DisplayFor(m => newsItem.NewsTitle)
                                </p>
                            </div>
                        </a>
                    </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#newsCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#newsCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
